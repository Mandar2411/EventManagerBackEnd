<div class="container">
  <% if current_user && current_user.user_role == 1 %>
    <div class="col-lg-8 m-lg-auto">
      <div class="card shadow">
        <div class="card-header">
          <h2 class="card-title text-center">Edit Event</h2>
        </div>
        <div class="card-body">
          <%= render "form", event: @event %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col-lg-8 m-lg-auto text-center">
      <div class="card shadow">
        <% if current_user %>
          <div class="card-header">
            <h2 class="card-title text-center">You are not allowed to edit Events. Please Sign in with admin
              User Id</h2>
          </div>
          <div class="card-body">
            <div>
              <%= link_to "<button class='btn btn-primary btn-lg mybutton' style='width: 140px;'> Sign Out </button>".html_safe, destroy_user_session_path, data: { turbo_method: :delete } %>
            </div>
          </div>
        <% else %>
          <div class="card-header">
            <h2 class="card-title text-center">Please Sign in with admin User Id to edit Event</h2>
          </div>
          <div class="card-body">
            <div>
              <%= link_to "<button class='btn btn-primary btn-lg mybutton' style='width: 140px;'> Sign In </button>".html_safe, new_user_session_path %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
